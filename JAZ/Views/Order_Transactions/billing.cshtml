    ViewBag.Title = "billing";
}


<html>
<head>
    <meta charset="utf-8" />
    <title>Payment Information</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/Style.css">
    <script src="~/Scripts/Script.js"></script>
    <script>src = ""</script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<style>

    .test {
        color: red;
        font-weight: bold;
    }
</style>
<center><h3><a href="">Shopping Bag</a>-----------------<a href="">Summary</a>-------------------<span class="test">Payment</span></h3></center>

<br />
<br />
<body>
    <div class="container-fluid">
        <div class="creditCardForm">
            <div class="heading">
                <h2>Credit Card Details</h2>
            </div>
            <div class="payment">
                <form>
                    Credit Card:
                    <input type="radio" name="cardtype" value="male"> Visa
                    <input type="radio" name="cardtype" value="female"> Master
                    <input type="radio" name="cardtype" value="other"> AmericanExpress
                    
                    <br />
                    <div class="form-group" id="card-number-field">
                        Card Number: <input type="text" pattern=".{16,}" maxlength="16" class="form-control" id="cardNumber" required>
                    </div>
                                      
                    <div class="form-group owner">
                        Card Holder Name: <input type="text" class="form-control" id="owner" required>
                    </div>
                    
                    <div class="form-group" id="expiration-date">
                        Expiration Date: <input type="date" />             
                      
                    </div>

                    <div class="form-group CVV">
                        CVV:<input type="text" pattern=".{3,}" maxlength="3" class="form-control" id="cvv" required>
                    </div>
                    <br />
                    <div class="form-group" id="pay-now">
                        <button type="submit" class="btn btn-default" id="paynow">Pay Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
